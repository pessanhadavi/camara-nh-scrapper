<%#= button_to 'Scrape', scrape_projects_path %>
<h1>Projetos de Lei</h1>

<table>
  <thead>
    <tr>
      <th>Law</th>
      <th>Law url</th>
      <th>Description</th>
      <th>Apresentation date</th>
      <th>Author</th>
      <th>Current local</th>
      <th>Status</th>
      <th>Deadline</th>
      <th>Last processing</th>
      <th>Last action</th>
      <th>Accessory docs</th>
      <th>Accessory docs url</th>
      <th>Original text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.law %></td>
        <td><%= project.law_url %></td>
        <td><%= project.description %></td>
        <td><%= project.apresentation_date %></td>
        <td><%= project.author %></td>
        <td><%= project.current_local %></td>
        <td><%= project.status %></td>
        <td><%= project.deadline %></td>
        <td><%= project.last_processing %></td>
        <td><%= project.last_action %></td>
        <td><%= project.accessory_docs %></td>
        <td><%= project.accessory_docs_url %></td>
        <td><%= project.original_text %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%#= link_to 'Edit', edit_project_path(project) %></td>
        <td><%#= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>